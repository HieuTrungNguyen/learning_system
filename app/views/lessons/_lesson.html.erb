<div class="row">
  <div class="table-responsive">
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th><%= t ".lesson" %></th>
          <th><%= t ".category" %></th>
          <th><%= t ".action" %></th>
          <th><%= t ".mark" %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="col-md-3"><%= t ".lesson" %>: <%= lesson.id %></td>
          <td class="col-md-3"><%= lesson.category_name %></td>
          <td class="col-md-3">
            <% if lesson.is_complete %>
              <%= link_to t(".complete"), lesson_path(lesson), class: "btn btn-success btn-sm" %>
            <% else %>
              <%= link_to t(".continue"), edit_lesson_path(lesson), class: "btn btn-info btn-sm" %>
            <% end %>
          </td>
          <td class="col-md-3">
            <%= lesson.number_correct_answer.to_s + "/" + Settings.lesson.size.to_s %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
