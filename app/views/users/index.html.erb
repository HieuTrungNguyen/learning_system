<% provide :title, t(".all_users") %>

<h1><%= t ".all_users" %></h1>
<div class="row">
  <div class="search-form">
    <%= form_tag users_path, method: :get do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], placeholder: t(".search"),
          class: "form-control search-field" %>
        <div class="input-group-btn search-btn">
          <%= button_tag type: "submit", class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            <span class="label-icon"><%= t ".search" %></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-hover table-responsive table-bordered th_word" id="list_user">
        <thead class="title_table th_word">
          <tr>
            <th class="th_index"><%= t ".number" %></th>
            <th class="th_user"><%= t ".avatar" %></th>
            <th class="th_user"><%= t ".name" %></th>
            <th class="th_user"><%= t ".email" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @users %>
        </tbody>
      </table>
      <%= will_paginate @users %>
    </div>
  </div>
</div>
