<tr class="user-row">
    <td class="col-md-1"><%= index_for user_counter, @users.current_page,
      Settings.user.per_page %></td>
    <td class="col-md-3 user-image">
      <%= image_tag user.avatar? ? user.avatar.url : Settings.image, class: "img-responsive" %>
    </td>
    <td class="col-md-4"><%= link_to user.name, user %></td>
    <td class="col-md-4"><%= user.email %></td>
</tr>
