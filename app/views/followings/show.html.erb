<% provide :title, t(".Following") %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render "shared/user_info" %>
    </section>
    <section class="stats">
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <h1><%= pluralize @following.size, t(".following") %></h1>
  <div class="col-md-8">
    <div class="table-responsive">
      <% if @users.any? %>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th><%= t ".number" %></th>
              <th><%= t ".avatar" %></th>
              <th><%= t ".name" %></th>
              <th><%= t ".email" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @users %>
          </tbody>
        </table>
        <%= will_paginate @users %>
      <% end %>
    </div>
  </div>
</div>
